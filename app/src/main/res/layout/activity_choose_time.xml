<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    tools:context="com.football.freekick.CalenderActivity">

    <LinearLayout
        android:layout_width="640px"
        android:layout_height="620px"
        android:background="@drawable/shape_corner_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@drawable/shape_top_corner_blue"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="88px"
                android:layout_marginBottom="100px"
                android:layout_marginRight="30px"
                android:gravity="center"
                android:text="@string/from"
                android:textColor="@color/white"
                android:textSize="36px"/>

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="88px"
                android:layout_marginBottom="100px"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="36px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="88px"
                android:layout_marginBottom="100px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:gravity="center"
                android:text="@string/to"
                android:textColor="@color/white"
                android:textSize="36px"/>

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="88px"
                android:layout_marginBottom="100px"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="36px"/>
        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="88px"
            app:tabGravity="fill"
            app:tabIndicatorColor="#070D44"
            app:tabIndicatorHeight="1dp"
            app:tabMode="fixed"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabSelectedTextColor="#070D44"
            app:tabTextColor="@color/text_black"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1.0"
            android:background="#fcfcfc"
            android:flipInterval="30"
            android:persistentDrawingCache="animation"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingBottom="30px"
            android:paddingLeft="100px"
            android:paddingRight="32px"
            android:paddingTop="30px"
            android:text="@string/confirm"
            android:textColor="@color/bottom_blue_bg"
            android:textSize="30px"/>
    </LinearLayout>
</LinearLayout>
