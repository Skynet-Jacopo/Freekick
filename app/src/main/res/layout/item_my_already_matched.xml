<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/ll_content"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#afafaf"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24px">

        <TextView
            android:layout_width="8px"
            android:layout_height="wrap_content"
            android:layout_marginRight="16px"
            android:background="#FE0100"
            android:textSize="@dimen/text_24"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_24"
            tools:text="時間"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ececec"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32px"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <LinearLayout
            android:paddingTop="32px"
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home_logo"
                android:layout_width="72px"
                android:layout_height="82px"
                android:scaleType="fitXY"
                tools:src="@color/black"/>

            <TextView
                android:id="@+id/tv_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:textColor="@color/text_black"
                android:textSize="20px"
                tools:text="這是名字"/>
        </LinearLayout>
        <LinearLayout

            android:id="@+id/ll_2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="96px"
            android:layout_toRightOf="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="21:00 - 23:00"
                android:textColor="@color/text_black"
                android:textSize="30px"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_time"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:textColor="@color/text_black"
                android:textSize="22px"
                tools:text="這是地點"/>
        </LinearLayout>


        <LinearLayout
            android:paddingTop="32px"
            android:layout_marginLeft="104px"
            android:layout_toRightOf="@+id/ll_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_visitor_logo"
                android:layout_width="72px"
                android:layout_height="82px"
                android:scaleType="fitXY"
                android:src="@color/black"/>

            <TextView
                android:id="@+id/tv_visitor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:textColor="@color/text_black"
                android:textSize="20px"
                tools:text="這是名字"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_state"
            android:textSize="20px"
            android:background="@drawable/selector_corner_green_gray_bg"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="已邀請"
            android:gravity="center"
            android:layout_width="100px"
            android:layout_height="44px"/>

        <TextView
            android:id="@+id/tv_icon_delete"
            android:paddingLeft="34px"
            android:paddingTop="12px"
            android:paddingRight="34px"
            android:text="@string/icon_error"
            android:layout_alignParentRight="true"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>