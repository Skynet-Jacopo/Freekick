<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="32px"
        android:paddingLeft="24px"
        android:paddingTop="32px">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="340px"
            android:layout_height="250px"
            android:scaleType="fitXY"
            android:src="@drawable/one_time_bg"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px">

            <TextView
                android:id="@+id/tv_pitch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="巴富街運動場"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_30"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/ll_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pitch_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12px">

                <TextView
                    android:id="@+id/tv_icon_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10px"
                    android:singleLine="true"
                    android:text="@string/icon_location"
                    android:textColor="#6c6c6c"
                    android:textSize="@dimen/text_18"/>

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="東菀市城區"
                    android:textColor="#6c6c6c"
                    android:textSize="@dimen/text_18"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_location"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12px"
                android:text="19:00-21:00"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_30"/>

            <LinearLayout
                android:id="@+id/ll_dress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_time"
                android:layout_marginTop="10px"
                android:orientation="horizontal"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <ImageView
                    android:id="@+id/iv_dress_home"
                    android:layout_width="70px"
                    android:layout_height="80px"
                    android:background="@color/black"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_dress_home"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="VS"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_24"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/iv_dress_visitor"
                    android:layout_width="70px"
                    android:layout_height="80px"
                    android:background="@color/black"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_dress_visitor"/>
            </LinearLayout>

            <TextView
                android:clickable="true"
                android:id="@+id/tv_state"
                android:layout_width="120px"
                android:layout_height="32px"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ll_dress"
                android:layout_marginTop="8px"
                android:background="@drawable/selector_round_green_gray_bg"
                android:gravity="center"
                android:text="參與約賽"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#070D44"/>
</LinearLayout>