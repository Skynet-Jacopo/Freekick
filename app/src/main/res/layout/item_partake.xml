<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="32px"
        android:paddingLeft="24px"
        android:paddingTop="32px">

        <FrameLayout
            android:layout_width="340px"
            android:layout_height="250px"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/one_time_bg"/>

            <LinearLayout
                android:id="@+id/ll_share"
                android:paddingBottom="20px"
                android:paddingRight="15px"
                android:paddingTop="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:clickable="true"
                    android:id="@+id/tv_icon_share"
                    android:layout_width="58px"
                    android:layout_height="40px"
                    android:background="@drawable/selector_half_corner_blue_gray_bg"
                    android:gravity="center"
                    android:text="@string/icon_share"
                    android:textColor="@color/white"
                    android:textSize="28px"/>
            </LinearLayout>

        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px">

            <TextView
                android:gravity="center"
                android:id="@+id/tv_pitch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Tsz Wan Shan Estate Service Reservoir Playground (No.1)"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_30"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/ll_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pitch_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12px">

                <TextView
                    android:id="@+id/tv_icon_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10px"
                    android:singleLine="true"
                    android:text="@string/icon_location"
                    android:textColor="#6c6c6c"
                    android:textSize="@dimen/text_18"/>

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="九龍觀塘三家村茶果嶺道四山街交界"
                    android:textColor="#6c6c6c"
                    android:textSize="@dimen/text_18"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_location"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12px"
                android:text="19:00-21:00"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_30"/>

            <LinearLayout
                android:id="@+id/ll_dress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_time"
                android:layout_marginTop="10px"
                android:orientation="horizontal"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_dress_home"
                        android:layout_width="70px"
                        android:layout_height="80px"
                        android:background="@color/black"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_dress_home"/>

                    <TextView
                        android:id="@+id/tv_home_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_dress_home"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6px"
                        android:text="名字"
                        android:textColor="@color/text_black"
                        android:textSize="14px"/>
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="VS"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_24"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_dress_visitor"
                        android:layout_width="70px"
                        android:layout_height="80px"
                        android:background="@color/black"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_dress_visitor"/>

                    <TextView
                        android:id="@+id/tv_visitor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_dress_visitor"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6px"
                        tools:text="名字"
                        android:textColor="@color/text_black"
                        android:textSize="14px"/>
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="120px"
                android:layout_height="32px"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ll_dress"
                android:layout_marginTop="8px"
                android:background="@drawable/selector_round_green_gray_bg"
                android:clickable="true"
                android:gravity="center"
                android:text="參與約賽"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#070D44"/>
</LinearLayout>