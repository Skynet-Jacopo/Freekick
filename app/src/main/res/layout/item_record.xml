<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:clickable="true"
              android:background="@drawable/selector_rectangle_white_gray_bg"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#afafaf"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24px">

        <TextView
            android:layout_width="8px"
            android:layout_height="wrap_content"
            android:layout_marginRight="16px"
            android:background="#FE0100"
            android:textSize="@dimen/text_24"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_24"
            tools:text="時間"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ececec"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32px"
        android:paddingLeft="104px"
        android:paddingRight="104px"
        android:paddingTop="32px">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home_logo"
                android:scaleType="fitXY"
                android:layout_width="72px"
                android:layout_height="86px"
                tools:src="@color/black"/>

            <TextView
                android:id="@+id/tv_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12px"
                android:textColor="@color/text_black"
                android:textSize="20px"
                tools:text="這是名字"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_time"
            android:textColor="@color/text_black"
            android:textSize="30px"
            android:layout_marginTop="28px"
            android:layout_centerHorizontal="true"
            android:text="21:00 - 23:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_location"
            android:layout_below="@+id/tv_time"
            android:textColor="@color/text_black"
            android:textSize="22px"
            android:layout_marginTop="12px"
            android:layout_centerHorizontal="true"
            tools:text="這是地點"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_visitor_logo"
                android:scaleType="fitXY"
                android:layout_width="72px"
                android:layout_height="86px"
                android:src="@color/black"/>

            <TextView
                android:id="@+id/tv_visitor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12px"
                android:textColor="@color/text_black"
                android:textSize="20px"
                tools:text="這是名字"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>