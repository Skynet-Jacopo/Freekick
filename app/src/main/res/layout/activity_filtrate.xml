<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.football.freekick.activity.FiltrateActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44px"
            android:background="#ECECEC"
            android:gravity="center_vertical|right"
            android:paddingRight="24px"
            android:text="篩選"
            android:textColor="#05AB66"
            android:textSize="20px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32px"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:paddingTop="32px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24px"
                android:text="@string/match_time"
                android:textColor="@color/text_black"
                android:textSize="20px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_time"
                    android:textColor="@color/text_black"
                    android:textSize="24px"/>

                <EditText
                    android:singleLine="true"
                    android:id="@+id/edt_start_time"
                    android:layout_width="144px"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text1"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:inputType="time|datetime"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_24"
                    android:theme="@style/MyEditText"/>

                <View
                    android:layout_width="144px"
                    android:layout_height="1px"
                    android:layout_below="@+id/edt_start_time"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/text1"
                    android:background="@color/gray_mid"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29px"
                    android:layout_toRightOf="@+id/edt_start_time"
                    android:text="@string/end_time"
                    android:textColor="@color/text_black"
                    android:textSize="24px"/>

                <EditText
                    android:singleLine="true"
                    android:id="@+id/edt_end_time"
                    android:layout_width="144px"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text2"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:inputType="time|datetime"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_24"
                    android:theme="@style/MyEditText"/>

                <View
                    android:layout_width="144px"
                    android:layout_height="1px"
                    android:layout_below="@+id/edt_start_time"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/text2"
                    android:background="@color/gray_mid"/>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16px"
            android:background="#ECECEC"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32px"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:paddingTop="32px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24px"
                android:text="@string/area"
                android:textColor="@color/text_black"
                android:textSize="20px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_icon_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="8px"
                    android:text="@string/icon_location"
                    android:textColor="#0C1E76"
                    android:textSize="24px"/>

                <EditText
                    android:singleLine="true"
                    android:id="@+id/edt_location"
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_icon_location"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:inputType="text"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_24"
                    android:theme="@style/MyEditText"/>

                <View
                    android:layout_width="280px"
                    android:layout_height="1px"
                    android:layout_below="@+id/edt_location"
                    android:layout_toRightOf="@+id/tv_icon_location"
                    android:background="@color/gray_mid"/>

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16px"
            android:background="#ECECEC"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24px"
            android:paddingLeft="19px"
            android:paddingRight="19px"
            android:paddingTop="32px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24px"
                android:text="@string/people_num"
                android:textColor="@color/text_black"
                android:textSize="20px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_num_1"
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_gray_bg"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text="@string/people_under_5"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>

                <TextView
                    android:id="@+id/tv_num_2"
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_gray_bg"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text="@string/people_6_10"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>

                <TextView
                    android:id="@+id/tv_num_3"
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_gray_bg"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text="@string/people_11_20"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>

                <TextView
                    android:id="@+id/tv_num_4"
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_gray_bg"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text="@string/people_above_20"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16px"
            android:background="#ECECEC"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24px"
            android:paddingLeft="19px"
            android:paddingRight="19px"
            android:paddingTop="32px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24px"
                android:text="@string/average_height"
                android:textColor="@color/text_black"
                android:textSize="20px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_height_1"
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_gray_bg"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text="@string/under_160cm"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>

                <TextView
                    android:id="@+id/tv_height_2"
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_gray_bg"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text="161-170"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>

                <TextView
                    android:id="@+id/tv_height_3"
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_gray_bg"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text="171-180"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>

                <TextView
                    android:id="@+id/tv_height_4"
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_gray_bg"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text="@string/above_180cm"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16px"
            android:background="#ECECEC"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24px"
            android:paddingLeft="19px"
            android:paddingRight="19px"
            android:paddingTop="32px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24px"
                android:text="@string/team_age"
                android:textColor="@color/text_black"
                android:textSize="20px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_age_1"
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_gray_bg"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text="@string/age_under_20"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>

                <TextView
                    android:id="@+id/tv_age_2"
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_gray_bg"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text="@string/age_21_30"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>

                <TextView
                    android:id="@+id/tv_age_3"
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_gray_bg"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text="@string/age_31_40"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>

                <TextView
                    android:id="@+id/tv_age_4"
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_gray_bg"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text="@string/age_above_41"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16px"
            android:background="#ECECEC"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24px"
            android:paddingLeft="19px"
            android:paddingRight="19px"
            android:paddingTop="32px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24px"
                android:text="@string/team_style"
                android:textColor="@color/text_black"
                android:textSize="20px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_style_1"
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_gray_bg"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text="@string/become_strong"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>

                <TextView
                    android:id="@+id/tv_style_2"
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_gray_bg"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text="@string/for_fun"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingRight="5px"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16px"
            android:background="#ECECEC"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="400px"
                android:layout_height="64px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="154px"
                android:background="@drawable/selector_corner_green_gray_bg"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="24px"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_transparent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

    </LinearLayout>
</LinearLayout>
