<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="640px"
        android:layout_height="620px"
        android:background="@drawable/shape_corner_white"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:textSize="36px"
            android:textColor="@color/white"
            android:text="@string/vs_hobby"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginBottom="100px"
            android:background="@drawable/shape_top_corner_blue"/>

        <com.football.freekick.views.loopview.LoopView
            android:id="@+id/loop_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:awv_itemsVisibleCount = "7"
            app:awv_isLoop = "false"
            app:awv_textsize="15"/>

        <TextView
            android:layout_marginTop="40px"
            android:id="@+id/tv_confirm"
            android:paddingLeft="100px"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="30px"
            android:paddingRight="32px"
            android:paddingTop="30px"
            android:text="@string/confirm"
            android:textColor="@color/bottom_blue_bg"
            android:textSize="30px"/>
    </LinearLayout>
</com.zhy.autolayout.AutoFrameLayout>