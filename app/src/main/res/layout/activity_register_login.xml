<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/dark_blue_bg"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.football.freekick.RegisterLoginActivity">

    <TextView
        android:layout_marginTop="330px"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="36px"
        android:textColor="@color/white"
        android:text="Freekick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/tv_facebook_register"
        android:layout_marginTop="480px"
        android:background="@drawable/shape_corner_blue"
        android:layout_marginRight="115px"
        android:layout_marginLeft="115px"
        android:gravity="center"
        android:text="@string/register_by_facebook"
        android:textColor="@color/white"
        android:textSize="30px"
        android:layout_width="match_parent"
        android:layout_height="80px"/>
    <TextView
        android:id="@+id/tv_email_register"
        android:layout_marginTop="32px"
        android:background="@drawable/shape_corner_light_red"
        android:layout_marginRight="115px"
        android:layout_marginLeft="115px"
        android:gravity="center"
        android:text="@string/register_by_email"
        android:textColor="@color/white"
        android:textSize="30px"
        android:layout_width="match_parent"
        android:layout_height="80px"/>
    <TextView
        android:id="@+id/tv_login"
        android:layout_gravity="right"
        android:paddingRight="134px"
        android:paddingTop="32px"
        android:paddingLeft="134px"
        android:paddingBottom="32px"
        android:gravity="right"
        android:textStyle="bold"
        android:textSize="30px"
        android:textColor="@color/white"
        android:text="@string/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
