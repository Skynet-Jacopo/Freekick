<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    tools:context="com.football.freekick.CalenderActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_corner_white"
        android:layout_width="580px"
        android:layout_height="580px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104px">
            <TextView
                android:padding="10dp"
                android:gravity="center_vertical"
                android:id="@+id/tv_left"
                android:textColor="#8a8a8a"
                android:textSize="36px"
                android:text="左"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:paddingTop="36px"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_month"
                    android:textColor="@color/text_black"
                    android:textSize="36px"
                    android:text="10 月"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_year"
                    android:textColor="@color/text_black"
                    android:textSize="24px"
                    android:text=" 2017"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:padding="10dp"
                android:gravity="center_vertical"
                android:id="@+id/tv_right"
                android:textColor="#8a8a8a"
                android:textSize="36px"
                android:text="右"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <View
            android:background="@color/black_blue"
            android:layout_width="match_parent"
            android:layout_height="16px"/>
        <com.beiing.monthcalendar.MonthCalendar
            android:id="@+id/month_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:mc_calendarHeight="@dimen/calender_content_height"
            app:mc_show_week="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="30px"/>
    </LinearLayout>
</LinearLayout>
