<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.football.freekick.fragment.PartakeFragment">

    <LinearLayout
        android:id="@+id/ll_match_date"
        android:layout_width="match_parent"
        android:layout_height="94px"
        android:background="@drawable/selector_rectangle_white_gray_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/match_date"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_30"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_24"/>

        <TextView
            android:id="@+id/tv_icon_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_day"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_30"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bcbcbc"/>

    <LinearLayout
        android:id="@+id/ll_match_time"
        android:layout_width="match_parent"
        android:layout_height="94px"
        android:background="@drawable/selector_rectangle_white_gray_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/match_time"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_30"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/please_choose_match_time"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_black"
            android:textSize="@dimen/text_24"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bcbcbc"/>

    <LinearLayout
        android:id="@+id/ll_pitch_size"
        android:layout_width="match_parent"
        android:layout_height="94px"
        android:background="@drawable/selector_rectangle_white_gray_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pitch_size"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_30"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_pitch_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7人場"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_24"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bcbcbc"/>

    <LinearLayout
        android:id="@+id/ll_area"
        android:layout_width="match_parent"
        android:layout_height="94px"
        android:layout_marginBottom="16px"
        android:background="@drawable/selector_rectangle_white_gray_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/area"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_30"
            android:textStyle="bold"/>

        <TextView
            android:gravity="right"
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/please_choose_the_district"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_black"
            android:textSize="@dimen/text_24"/>
    </LinearLayout>


    <!--這裡添加廣告-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_partake"
            android:layout_marginBottom="56px"
            android:orientation="vertical"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:paddingTop="24px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginBottom="15px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_advertisement1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15px"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@color/bottom_blue_bg"/>

                <ImageView
                    android:id="@+id/iv_advertisement2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@color/bottom_blue_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_advertisement3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15px"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@color/bottom_blue_bg"/>

                <ImageView
                    android:id="@+id/iv_advertisement4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@color/bottom_blue_bg"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_partake"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="49px"
            android:layout_marginLeft="65px"
            android:layout_marginRight="65px"
            android:background="@drawable/selector_corner_green_gray_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/partake"
            android:textColor="@color/white"
            android:textSize="36px"/>
    </RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
