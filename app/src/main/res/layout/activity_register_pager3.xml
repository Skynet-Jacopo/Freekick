<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.football.freekick.activity.registerlogin.RegisterPager3Activity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="98px"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/team_jersey_color"
        android:textColor="@color/white"
        android:textSize="@dimen/text_36"/>
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="50px"
        android:paddingLeft="24px"
        android:paddingRight="80px"
        android:paddingTop="24px"
        android:text="@string/back"
        android:textColor="@color/white"
        android:textSize="@dimen/text_36"/>

    <LinearLayout
        android:layout_marginTop="80px"
        android:layout_below="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_horizontal"
                android:text="@string/home"
                android:textColor="@color/white"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_clothes_home"
                android:scaleType="fitXY"
                android:background="@color/yello"
                android:src="@drawable/clothes_home"
                android:layout_marginTop="24px"
                android:layout_gravity="center_horizontal"
                android:layout_width="212px"
                android:layout_height="232px"/>

            <com.football.freekick.commons.colorpicker.ColorPickerView
                android:layout_marginTop="32px"
                android:id="@+id/color_picker_home"
                app:palette="@drawable/icon_color_picker"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_horizontal"
                android:text="@string/away"
                android:textColor="@color/white"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_clothes_visitor"
                android:scaleType="fitXY"
                android:background="@color/green_light"
                android:src="@drawable/clothes_visitor"
                android:layout_marginTop="24px"
                android:layout_gravity="center_horizontal"
                android:layout_width="212px"
                android:layout_height="232px"/>
            <com.football.freekick.commons.colorpicker.ColorPickerView
                android:layout_marginTop="32px"
                android:id="@+id/color_picker_visitor"
                app:palette="@drawable/icon_color_picker"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginBottom="236px"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_complete"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginLeft="56px"
        android:layout_marginRight="56px"
        android:background="@drawable/shape_corner_green"
        android:gravity="center"
        android:text="@string/done"
        android:textColor="@color/white"
        android:textSize="36px"/>

</RelativeLayout>
