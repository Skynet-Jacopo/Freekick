<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.football.freekick.activity.MatchRateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#070D44"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="24px"
            android:paddingRight="30px"
            android:text="@string/icon_left_big"
            android:textColor="@color/white"
            android:textSize="36px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/match_invite"
            android:textColor="@color/white"
            android:textSize="36px"/>

        <TextView
            android:id="@+id/tv_friend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_notice"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="20px"
            android:text="@string/icon_friend"
            android:textColor="@color/white"
            android:textSize="36px"/>

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="20px"
            android:paddingRight="24px"
            android:text="@string/icon_notice"
            android:textColor="@color/white"
            android:textSize="36px"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88px">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="80px">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/blue_green"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/red"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bottom"
            android:layout_below="@+id/ll_top"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/green_light"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/orange_dark"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/green_light"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bottom"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_top"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/green_light"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/orange_dark"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/green_light"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/blue_green"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/red"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80px"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:layout_marginTop="168px"
        android:background="@drawable/pitch_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="152px"
            android:text="2017-11-27"
            android:textColor="@color/black"
            android:textSize="42px"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_date"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24px">

            <TextView
                android:id="@+id/tv_icon_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_set_location"
                android:textColor="@color/black"
                android:textSize="32px"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12px"
                android:text="何文田公關"
                android:textColor="@color/black"
                android:textSize="32px"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_location"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16px"
            android:text="19:00-21:00"
            android:textColor="@color/black"
            android:textSize="46px"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="530px"
            android:layout_height="400px"
            android:layout_below="@id/tv_time"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="64px"
            android:background="#80000000"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17px">

                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/attack"
                    android:textColor="@color/white"
                    android:textSize="30px"/>

                <ImageView
                    android:id="@+id/iv_1_1"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_1_2"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_1_3"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_1_4"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_1_5"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4px">

                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/defend"
                    android:textColor="@color/white"
                    android:textSize="30px"/>

                <ImageView
                    android:id="@+id/iv_2_1"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_2_2"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_2_3"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_2_4"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_2_5"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4px">

                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/punctuality"
                    android:textColor="@color/white"
                    android:textSize="30px"/>

                <ImageView
                    android:id="@+id/iv_3_1"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_3_2"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_3_3"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_3_4"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_3_5"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4px">

                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/ability"
                    android:textColor="@color/white"
                    android:textSize="30px"/>

                <ImageView
                    android:id="@+id/iv_4_1"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_4_2"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_4_3"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_4_4"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_4_5"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4px">

                <TextView
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/quality"
                    android:textColor="@color/white"
                    android:textSize="30px"/>

                <ImageView
                    android:id="@+id/iv_5_1"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_5_2"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_5_3"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_5_4"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_5_5"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:padding="5px"
                    android:src="@drawable/icon_star_unselected"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32px"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_home_num"
                    android:layout_width="49px"
                    android:layout_height="48px"
                    android:background="@drawable/shape_corner_green"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="20px"/>

                <TextView
                    android:id="@+id/tv_visitor_num"
                    android:layout_width="49px"
                    android:layout_height="48px"
                    android:layout_marginLeft="220px"
                    android:background="@drawable/shape_corner_green"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="20px"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="520px"
            android:layout_height="80px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="148px"
            android:layout_marginTop="64px"
            android:background="@drawable/selector_corner_green_gray_bg"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="30px"/>
    </RelativeLayout>
</FrameLayout>
