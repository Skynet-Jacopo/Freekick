<?xml version="1.0" encoding="utf-8"?>
<!--长方体 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/gray_light" />
            <corners android:topLeftRadius="0px"
                     android:topRightRadius="0px"
                     android:bottomRightRadius="0px"
                     android:bottomLeftRadius="0px"/>
            <stroke android:width="0dp" android:color="#000000" />
        </shape>

    </item>
    <item>
        <shape>
            <solid android:color="#530477" />
            <corners android:topLeftRadius="00px"
                     android:topRightRadius="0px"
                     android:bottomRightRadius="0px"
                     android:bottomLeftRadius="0px"/>
            <stroke android:width="0dp" android:color="#000000" />
        </shape>
    </item>

</selector>